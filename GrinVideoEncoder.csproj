    <Content Remove="publish\**" />
    <Content Remove="temp\**" />
    <EmbeddedResource Remove="publish\**" />
    <EmbeddedResource Remove="temp\**" />
    <None Remove="publish\**" />
    <None Remove="temp\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="4.2.0" />
