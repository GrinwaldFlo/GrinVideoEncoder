@page
@model GrinVideoEncoder.Pages.Videos.ReencodeModel
@{
    ViewData["Title"] = "Re-encode Videos";
}

<div class="container">
    <h2>Re-encode Videos</h2>
    <form method="get">
        <div class="form-group">
            <label for="Threshold">Quality Ratio Threshold</label>
            <input type="number" step="0.01" class="form-control" id="Threshold" name="Threshold" value="@Model.Threshold" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    @if (Model.Videos != null && Model.Videos.Count > 0)
    {
        <form method="post">
            <button type="submit" class="btn btn-danger">Start Re-encoding</button>
        </form>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Filename</th>
                    <th>Directory</th>
                    <th>Quality Ratio</th>
                    <th>Duration (s)</th>
                    <th>Resolution</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model.Videos)
                {
                    <tr>
                        <td>@video.Filename</td>
                        <td>@video.DirectoryPath</td>
                        <td>@video.QualityRatioOriginal?.ToString("F2")</td>
                        <td>@video.DurationSeconds</td>
                        <td>@(video.Width)x@(video.Height)</td>
                        <td>@video.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.Videos != null)
    {
        <p>No videos found above the threshold.</p>
    }
</div>
