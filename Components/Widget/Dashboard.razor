<RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap">
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Number of videos" />
        <RadzenBadge Text=@_nbVideos.ToString() />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Compression rate" />
        <RadzenBadge Text=@($"{CompressionRate:F0}%") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Original size" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_sumByteOriginal)}") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Compressed size" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_sumByteCompressed)}") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="To compress size" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_sumByteToReEncode)}") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Free space work volume" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_availableSizeWorkingDrive)}") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Free space indexed volume" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_availableSizeDataDrive)}") />
    </RadzenCard>
    <RadzenCard Style="width:300px">
        <RadzenLabel Text="Trash size" />
        <RadzenBadge Text=@($"{Models.VideoFile.FormatBytes(_trashSize)}") />
    </RadzenCard>
</RadzenStack>