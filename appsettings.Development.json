{
	"DetailedErrors": true,
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"Folders": {
		"Input": "./temp/input",
		"Processing": "./temp/processing",
		"Output": "./temp/output",
		"Failed": "./temp/failed",
		"Temp": "./temp/temp"
	},
	"FFmpegPath": "ffmpeg",
	"Serilog": {
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": {
					"path": "./temp/logs/log.txt",
					"rollingInterval": "Day"
				}
			}
		]
	}
}