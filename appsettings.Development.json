{
	"DetailedErrors": true,
	"Settings": {
		"InputPath": "./temp/input",
		"ProcessingPath": "./temp/processing",
		"OutputPath": "./temp/output",
		"FailedPath": "./temp/failed",
		"TempPath": "./temp/temp",
		"TrashPath": "./temp/trash",
		"LogPath": "./temp/logs"
	},
	"Serilog": {
		"MinimumLevel": {
			"Default": "Debug",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning"
			}
		},
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": {
					"path": "./temp/logs/GrinVideoEncoder.log",
					"rollingInterval": "Day"
				}
			}
		]
	},
	"Kestrel": {
		"Endpoints": {
			"Http": {
				"Url": "http://localhost:5000"
			}
		}
	}
}